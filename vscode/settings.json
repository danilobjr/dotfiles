{
  "banner-comments-plus.favorites": ["ANSI Shadow"],
  "breadcrumbs.enabled": false,
  "breadcrumbs.filePath": "off",
  "cSpell.language": "en,,pt_BR",
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.suggest.showWords": false,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/**.js": {
      "when": "$(basename).tsx"
    }
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "keyboard.dispatch": "keyCode",
  "multiDiffEditor.experimental.enabled": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.profiles.windows": {
    "path": { "path": "C:\\Windows\\System32\\wsl.exe" }
  },
  "todo-tree.tree.showScanModeButton": false,
  "vim.smartRelativeLine": true,
  "vim.leader": "<space>",
  "vim.statusBarColorControl": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["h"]
    },
    {
      "before": ["k"],
      "after": ["j"]
    },
    {
      "before": ["l"],
      "after": ["k"]
    },
    {
      "before": [";"],
      "after": ["l"]
    },
    {
      "before": ["<leader>", ";"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "\\"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "g", "f"],
      "commands": ["workbench.action.toggleMaximizeEditorGroup"],
      "when": "editorPartMaximizedEditorGroup || editorPartMultipleEditorGroups"
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"],
      "when": "editorTextFocus && !editorReadonly"
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["editor.fold"]
    },
    {
      "before": ["<leader>", "f", "u"],
      "commands": ["editor.unfold"]
    },
    {
      "before": ["<leader>", "f", "a"],
      "commands": ["editor.foldAll"]
    },
    {
      "before": ["<leader>", "f", "1"],
      "commands": ["editor.foldLevel1"]
    },
    {
      "before": ["<leader>", "f", "2"],
      "commands": ["editor.foldLevel2"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleCenteredLayout"]
    },
    // {
    //   "before": ["<leader>", "m", "m"],
    //   "commands": ["bookmarks.toggle"]
    // },
    // {
    //   "before": ["<leader>", "m", "l"],
    //   "commands": ["bookmarks.list"]
    // },
    {
      "before": ["<leader>", "w", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "w", "a"],
      "commands": ["workbench.action.files.saveAll"]
    },
    {
      "before": ["<leader>", "q", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "q", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"],
      "when": ["editorHasRenameProvider && editorTextFocus && !editorReadonly"]
    },
    {
      "before": ["<leader>", "o"],
      "after": ["o", "<esc>"]
    },
    {
      "before": ["<leader>", "O"],
      "after": ["O", "<esc>"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["S", "<esc>"]
    },
    {
      "before": ["<leader>", "s"],
      "after": [
        ":",
        "%",
        "s",
        "/",
        "<c-r>",
        "<c-w>",
        "/",
        "/",
        "g",
        "<left>",
        "<left>"
      ]
    },
    {
      "before": ["<leader>", "S"],
      "after": [
        ":",
        "%",
        "s",
        "/",
        "<c-r>",
        "<c-w>",
        "/",
        "<c-r>",
        "<c-w>",
        "/",
        "g",
        "<left>",
        "<left>"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["h"]
    },
    {
      "before": ["k"],
      "after": ["j"]
    },
    {
      "before": ["l"],
      "after": ["k"]
    },
    {
      "before": [";"],
      "after": ["l"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.blockComment"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["h"]
    },
    {
      "before": ["k"],
      "after": ["j"]
    },
    {
      "before": ["l"],
      "after": ["k"]
    },
    {
      "before": [";"],
      "after": ["l"]
    }
  ],
  "vim.statusBarColors.normal": ["#3e7aca", "#FFFFFF"],
  "vim.statusBarColors.insert": ["#679436", "#FFFFFF"],
  "vim.statusBarColors.visual": ["#D5DFE5", "#3C4859B3"],
  "vim.statusBarColors.visualline": ["#D5DFE5", "#3C4859B3"],
  "vim.statusBarColors.visualblock": ["#D5DFE5", "#3C4859"],
  "vim.statusBarColors.replace": ["#D05353", "#FFFFFF"],
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.openFilesInNewWindow": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "statusBar.background": "#3e7aca",
    "statusBar.noFolderBackground": "#3e7aca",
    "statusBar.debuggingBackground": "#3e7aca",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.debuggingForeground": "#FFFFFF"
  },
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
    // "editor.defaultFormatter": "ms-dotnettools.csharp",
  },
  "[terraform]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.tabSize": 2
  },
  "[terraform-vars]": {
    "editor.tabSize": 2
  },
  "angular.view-engine": true,
  "csharp.suppressBuildAssetsNotification": true,
  "FSharp.suggestGitignore": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "'([^']*)'"]
  ],
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.suggest.paths": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "window.commandCenter": false,
  "workbench.tree.enableStickyScroll": false
}
